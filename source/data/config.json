{
    "skip_splash_screens": false,
    "enable_cheat_codes": false,
    "enable_enemies": true,
    "melee_enabled": true,
    "sword_attack_radius": 30,    
    "control_style": "relative",
    "debugging": false,
    "enable_npc": true,
    "apply_recoil": false,
    "even_bullet_spread": true,

    # When hit, this is the percent chance of losing a crew member
    "chance_to_lose_crew_on_hit_percent": 33,
    # Drive jumps by this % when already rescued the max number of NPCs, and rescue another one
    "max_npcs_drive_boost": 10,
    # Already got max number of NPCs, score jumps by this per NPC
    "max_npcs_score_boost": 50,

    "max_crew": 21,
    "max_health": 5,
    "ai_cooldown_seconds": 1, # AI recalculates every <this> seconds

    # Ship upgrades every 3N crew members. The first upgrade is at crew = 3,
    # the next at crew = 6, 9, 12, etc.
    "upgrades": {
        "emergency_repairs_repair_rate": 0.001,
        "engineering_crew_speed_multiplier": 1.2,
        "tactics_crew_attack_rate": 1.2,
        "gunner_crew_reload_rate": 1.2,
        "repair_crew_repair_rate": 0.003,
        "engine_tuning_speed_multiplier": 1.5,
        "weapons_tuning_attack_rate": 1.5,
        "ammo_management_reload_rate": 1.5,
        "advanced_engine_tuning_speed_multiplier": 1.8,
        "advanced_ammo_management_reload_rate": 2
    },

    # Guns! Each gun needs a collection of attributes.
    "pistol_bullets":  15,                      #How many bullets / clip
    "pistol_burst": 1,				#How many bullets / shot
    "pistol_spread": 1,				#Weapon accuracy spread (Degrees)
    "pistol_reload_seconds": 1.5, 		#Time to reload (Seconds)
    "pistol_cooldown_seconds": 0.35,		#Time between shots (Seconds)
    "pistol_bullet_type": "Bullet_Basic",	#Bullet objet to spawn on attack.
    "pistol_image_frame": 0,

    "shotgun_bullets": 4,
    "shotgun_burst": 5,
    "shotgun_spread": 10,
    "shotgun_reload_seconds": 3,
    "shotgun_cooldown_seconds": 1,
    "shotgun_bullet_type": "Bullet_Basic",	#Short range bullet
    "shotgun_image_frame": 0,

    "machine_bullets": 30,
    "machine_burst": 1,
    "machine_spread": 10,
    "machine_reload_seconds": 3,
    "machine_cooldown_seconds": 0.1,
    "machine_bullet_type": "Bullet_Basic",	#Short range bullet
    "machine_image_frame": 0,

    "rocket_bullets": 4,
    "rocket_burst": 1,
    "rocket_spread": 0,
    "rocket_reload_seconds": 3,
    "rocket_cooldown_seconds": 1,
    "rocket_bullet_type": "Bullet_Rocket",	#On removal, spawn explosion.
    "rocket_image_frame": 0,

    "rail_bullets": 1,
    "rail_burst": 1,
    "rail_spread": 0,
    "rail_reload_seconds": 3,
    "rail_cooldown_seconds": 1,
    "rail_bullet_type": "Bullet_RailCharge",	#On removal, spawn RailShot.
    "rail_image_frame": 0
}

